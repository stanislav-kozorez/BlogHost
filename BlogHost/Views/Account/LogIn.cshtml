@model BlogHost.Models.LoginViewModel

@{ 
    ViewBag.Title = "Login page";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4 bordered">
        @using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { role = "form" }))
        {
            <div class="text-center">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/Images/logo.png"></a>
            </div>
            <h2 class="text-center">Please, log in</h2>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { type = "email", placeholder = "Email", @class = "form-control" })
                @*<input type="email" class="form-control" placeholder="Email">*@
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Password, new { type = "password", placeholder = "Password", @class = "form-control"})
                @*<input type="password" class="form-control" placeholder="Password">*@
            </div>
            <button class="btn btn-block btn-success" type="submit">Log in</button>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4 bordered">
        <h3 class="text-center">New to BlogHost?</h3>
        <h4 class="text-center">@Html.ActionLink("Create an account", "Registration")</h4>
    </div>
</div>
