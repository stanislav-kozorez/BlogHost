@model BlogHost.Models.UserEditViewModel
@{
    ViewBag.Title = "Edit user page";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4 bordered">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { role = "form" }))
        {
            @*@Html.AntiForgeryToken()*@
            @Html.HiddenFor(x => x.UserId)
            <div class="text-center">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/Images/logo.png"></a>
            </div>
            <h2 class="text-center">Edit @Model.Name's data</h2>
            <div class="form-group">
                @Html.Label("Name")
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Role")
                @Html.DropDownListFor(x => x.RoleId, Model.Roles, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Password(not required)")
                @Html.TextBoxFor(x => x.Password, new { placeholder = "Password", @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-success btn-block">Save</button>
            @Html.ActionLink("Cancel", "Index", "User", null, new { @class = "btn btn-primary btn-block"})
        }
    </div>
</div>

