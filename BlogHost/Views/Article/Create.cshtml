@model BlogHost.Models.ArticleViewModel
@{
    ViewBag.Title = "Create new article";
}
<div class="bordered">
    @using (Html.BeginForm("Create", "Article", FormMethod.Post, new { role = "form" }))
    {
        <h2 class="text-center">Create new article</h2>
        <div class="form-group">
            @Html.Label("First tag:")
            @Html.TextBoxFor(x => x.Tag1, new { placeholder = "Tag name (required)",@class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Second tag:")
            @Html.TextBoxFor(x => x.Tag2, new { placeholder = "Tag name (not required)", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Third tag:")
            @Html.TextBoxFor(x => x.Tag3, new { placeholder = "Tag name (not required)", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Article title:")
            @Html.TextBoxFor( x => x.Title, new { placeholder = "Article title", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Article text:")
            @Html.TextAreaFor(x => x.Text, new { placeholder = "Write text here", @class = "form-control limited-textarea-width", rows = "10" })
        </div>
        <input type="submit" class="btn btn-primary" value="Create" />
    }
</div>