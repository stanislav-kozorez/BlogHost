@model BlogHost.Models.ArticleViewModel
@{
    ViewBag.Title = "Confirm article delete";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4 bordered">
        @using (Html.BeginForm("Delete", "Article", FormMethod.Post, new { role = "form" }))
        {
            <div class="text-center text-wrap">
                <a href="@Url.Action("Index", "Home")"><img class="logo" src="~/Content/Images/logo.png"></a>
                <h2 class="text-center">Delete Confirmation</h2>
                <p class="lead">Are you sure that you want to delete Article "@Model.Title"?</p>
            </div>
            @Html.HiddenFor(x => x.ArticleId)
            <div class="row">
                <div class="col-md-6">
                    <input type="submit" value="Yes" class="btn btn-block btn-primary" />
                </div>
                <div class="col-md-6">
                    @Html.ActionLink("No", "Index", "Account", null, new { @class = "btn btn-primary btn-block" })
                </div>
            </div>
        }
    </div>
</div>

